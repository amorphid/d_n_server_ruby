<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Zone</th>
      <th>Name</th>
      <th>Record type</th>
      <th>Record class</th>
      <th>Ttl</th>
      <th>Rdata</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.zone_id %></td>
        <td><%= record.name %></td>
        <td><%= record.record_type %></td>
        <td><%= record.record_class %></td>
        <td><%= record.ttl %></td>
        <td><%= record.rdata %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

